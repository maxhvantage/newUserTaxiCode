<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backlayout"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.usertaxi.NotificationActivity"
    tools:showIn="@layout/activity_tripfordetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/card_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/time_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time:-"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/inputtypecolor" />

                        <TextView
                            android:id="@+id/time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9.45"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/colorblack" />

                        <TextView
                            android:id="@+id/source_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Add:"
                            android:layout_marginTop="@dimen/heading"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/inputtypecolor" />

                        <TextView
                            android:id="@+id/source_text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="demo address"

                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/colorblack" />

                        <TextView
                            android:id="@+id/dest_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desti Add:"
                            android:layout_marginTop="@dimen/heading"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/inputtypecolor" />

                        <TextView
                            android:id="@+id/destiaddresss"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="Demo destination "
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/colorblack" />

                        <TextView
                            android:id="@+id/text_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date:-"
                            android:layout_marginTop="@dimen/heading"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/inputtypecolor" />

                        <TextView
                            android:id="@+id/date_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="25-11-2015"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/colorblack" />

                        <TextView
                            android:id="@+id/text_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount:-"
                            android:layout_marginTop="@dimen/heading"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/inputtypecolor" />

                        <LinearLayout
                            android:id="@+id/amount_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/amount_currency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/colorblack" />

                            <TextView
                                android:id="@+id/amount_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/colorblack" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status:-"
                            android:layout_marginTop="@dimen/heading"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/inputtypecolor" />

                        <TextView
                            android:id="@+id/status_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Success"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/colorblack" />
                    </LinearLayout>
                    <fragment
                        android:id="@+id/map"
                        class="com.google.android.gms.maps.MapFragment"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:src="@android:drawable/ic_dialog_map" />
                </LinearLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/carddriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/top_margin"
                android:gravity="center_vertical"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_margin"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/card_margin"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Driver Available"
                            android:textColor="@color/colorblack" />
                        <TextView
                            android:id="@+id/mobile_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/heading"
                            android:text="No Driver Mobile"
                            android:textColor="@color/colorblack" />
                        <TextView
                            android:id="@+id/companyname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:layout_marginTop="@dimen/heading"
                            android:text="No company Name"
                            android:textColor="@color/colorblack" />
                        <TextView
                            android:id="@+id/taxinumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="@dimen/heading"
                            android:gravity="center"
                            android:text="No Taxi Number"
                            android:textColor="@color/colorblack" />



                    </LinearLayout>
                    <ImageView
                        android:id="@+id/driver_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_weight="0"
                        android:background="@drawable/rounded_box"
                        android:src="@drawable/ic_action_user" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/top_margin"
                android:gravity="center_vertical"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:background="@color/colorblack">

                    <TextView
                        android:id="@+id/ratetext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/prompt_ratetext"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorbutton" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/top_margin"
                android:gravity="center_vertical"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:weightSum="2">

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:isIndicator="true"/>

                        <EditText
                            android:id="@+id/edit_comment"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_below="@+id/ratingBar"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_background"
                            android:focusable="false"
                            android:editable="false"
                            android:ems="10"
                            android:gravity="start"
                            android:hint="Comment (optional)"
                            android:inputType="none"
                            android:textIsSelectable="true" />


                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>





        </LinearLayout>
    </ScrollView>

</RelativeLayout>
